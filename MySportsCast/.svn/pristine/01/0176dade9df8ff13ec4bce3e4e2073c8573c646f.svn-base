<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/addacast_search_et_height"
    android:background="@drawable/multi_edit_corner"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tag_event_et_height"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:text=""
        android:textSize="@dimen/very_small_text_size" />

    <ImageView
        android:id="@+id/tag_cross_image"
        android:layout_width="@dimen/tag_event_delete_height"
        android:layout_height="@dimen/tag_event_delete_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="3dp"
        android:src="@drawable/delete" />

</LinearLayout>