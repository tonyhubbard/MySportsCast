<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Facebook login style -->
    <style name="Facebook_login">
        <item name="android:background">@drawable/login_facebook</item>
    </style>

    <!-- Facebook linked login style -->
    <style name="Facebook_linked_login">
        <item name="android:background">@drawable/white_background</item>
    </style>
    
     <style name="Facebook_share_login">
        <item name="android:background">@drawable/facebook_border</item>
    </style>

    <!-- radio button style used in edit profile -->
    <style name="CustomTheme" parent="android:Theme">
        <item name="android:radioButtonStyle">@style/editProfile_radioBtn</item>
    </style>

    <style name="editProfile_radioBtn" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button"> @drawable/checkbox_background</item>
    </style>

    <style name="filterSubHeading" parent="android:Widget.Holo.TextView">
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:textColor">@color/app_theam</item>
        <item name="android:textSize">@dimen/heading2_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="filterbtn" parent="android:Widget.Holo.TextView">
        <item name="android:padding">@dimen/normal_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/app_theam</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:textSize">@dimen/heading1_text_size</item>
    </style>

    <style name="filterSubHeading2" parent="android:Widget.Holo.TextView">
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/heading3_text_size</item>
        <item name="android:layout_margin">@dimen/normal_margin</item>
    </style>

    <style name="filterSubLayout">
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">@dimen/normal_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/normal_padding</item>
    </style>

    <style name="filterSubLayout2">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/normal_padding</item>
    </style>

</resources>