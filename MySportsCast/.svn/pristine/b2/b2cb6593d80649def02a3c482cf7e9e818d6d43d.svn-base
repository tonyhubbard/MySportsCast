    <com.mysportsshare.mysportscast.view.SquareImageView
        android:id="@+id/myEvent_event_pic_iv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_event_pic" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <ImageView
            android:id="@+id/myEvent_cheers_tv_icon"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/mega_phone" />

        <TextView
            android:id="@+id/myEvent_cheers_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/myEvent_cheers_tv_icon"
            android:text="1200 cheers"
            android:textColor="#848484"
            android:textSize="@dimen/heading5_text_size" />

        <ImageView
            android:id="@+id/myEvent_edit_options"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:padding="2dp"
            android:src="@drawable/meenu"
            android:visibility="gone" />

        <TextView
            android:id="@+id/myEvent_attending_cnt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/myEvent_edit_options"
            android:text="0 attending"
            android:textColor="#848484"
            android:textSize="@dimen/heading5_text_size"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/myEvent_status_tv_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/myEvent_attending_cnt_tv"
            android:src="@drawable/likes" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/myEvent_cast_llyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:id="@+id/myEvent_border_v"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#A4A4A4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.mysportsshare.mysportscast.view.RoundedImageView
                android:id="@+id/myEvent_cast_prof_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/profile_pic_dummy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/myEvent_follower_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textColor="#000000"
                    android:textSize="@dimen/heading5_text_size" />

                <TextView
                    android:id="@+id/myEvent_comment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textColor="#848484"
                    android:textSize="@dimen/heading5_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>