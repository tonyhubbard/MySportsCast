<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black" >

        <RelativeLayout
            android:id="@+id/edProfile_user_img_layout"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/profile_pic_bg" >

            <com.mysportsshare.mysportscast.view.RoundedImageView
                android:id="@+id/edProfile_user_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/profile_pic_dummy" />

            <ImageView
                android:id="@+id/edProfile_user_img_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/edProfile_user_img"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ed_profile_pencil_icon" />

            <TextView
                android:id="@+id/edProfile_user_img_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/edProfile_user_img_edit"
                android:layout_alignTop="@+id/edProfile_user_img_edit"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/edProfile_user_img_edit"
                android:gravity="center"
                android:text="Edit photo" >
            </TextView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/edProfile_user_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edProfile_user_img_layout"
            android:background="#f5f4f4"
            android:orientation="vertical"
            android:padding="5dp" >

            <!--
                 <TextView
                android:id="@+id/edProfile_user_fname_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="First Name"
                android:textColor="@color/black" />
            -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/addacast_btn_height"
                android:layout_margin="@dimen/normal_margin" >

                <EditText
                    android:id="@+id/edProfile_user_fname_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:hint="first name"
                    android:inputType="textCapWords"
                    android:maxLength="50"
                    android:paddingLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/heading3_text_size" >
                </EditText>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:background="#D8D8D8" />
            </RelativeLayout>

            <!--
                 <TextView
                android:id="@+id/edProfile_user_lname_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/edProfile_user_fname_text"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Last Name"
                android:textColor="@color/black" />
            -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/addacast_btn_height"
                android:layout_margin="@dimen/normal_margin" >

                <EditText
                    android:id="@+id/edProfile_user_lname_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:hint="last name"
                    android:inputType="textCapWords"
                    android:maxLength="25"
                    android:paddingLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/heading3_text_size" >
                </EditText>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:background="#D8D8D8" />
            </RelativeLayout>

            <!--
                 <TextView
                android:id="@+id/edProfile_user_uname_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/edProfile_user_lname_text"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="User Name"
                android:textColor="@color/black" />
            -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/addacast_btn_height"
                android:layout_margin="@dimen/normal_margin" >

                <EditText
                    android:id="@+id/edProfile_user_uname_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:background="@null"
                    android:hint="user name"
                    android:inputType="textCapWords"
                    android:maxLength="100"
                    android:paddingLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/heading3_text_size" >
                </EditText>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:background="#D8D8D8" />
            </RelativeLayout>

            <!--
                 <TextView
                android:id="@+id/edProfile_user_email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/edProfile_user_uname_text"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Email"
                android:textColor="@color/black" />
            -->

            <RelativeLayout
                android:id="@+id/edProfile_user_email_rlyt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/addacast_btn_height"
                android:layout_margin="@dimen/normal_margin" >

                <EditText
                    android:id="@+id/edProfile_user_email_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="private(confidential)"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="8dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/heading3_text_size" >
                </EditText>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:background="#D8D8D8" />
            </RelativeLayout>

            <TextView
                android:id="@+id/edProfile_user_privacy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Privacy"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/edProfile_privacy_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edProfile_user_privacy_title"
                android:layout_margin="5dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/edProfile_privacy_followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/edProfile_privacy_followers_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/checkbox_background"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/edProfile_privacy_followers_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Followers only"
                        android:textColor="#000000"
                        android:textSize="@dimen/heading3_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edProfile_privacy_everyone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/edProfile_privacy_everyone_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/checkbox_background"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/edProfile_privacy_everyone_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Everyone"
                        android:textColor="#000000"
                        android:textSize="@dimen/heading3_text_size" />
                </LinearLayout>
            </LinearLayout>

            <!--
            <RadioGroup
                android:id="@+id/edProfile_privacy_rg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edProfile_user_privacy_title"
                android:button="@drawable/checkbox_background"
                android:gravity="center_vertical"
                android:layout_margin="5dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/edProfile_privacy_followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Followers Only"
                    android:button="@drawable/checkbox_background"                    
                    android:textColor="#000000"
                    android:layout_marginRight="10dp"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/edProfile_privacy_everyone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:button="@drawable/checkbox_background"
                    android:text="Every one"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp" />
            </RadioGroup>
            -->

            <Button
                android:id="@+id/edProfile_save_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/share_btn_height"
                android:layout_below="@id/edProfile_privacy_rg"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/normal_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:background="@drawable/submit_btn"
                android:gravity="center"
                android:onClick="clickRegister" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>