<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_fragment_row_item_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:layout_margin="@dimen/small_margin"
    
    android:orientation="horizontal" >

    <com.mysportsshare.mysportscast.view.SquareImageView
        android:id="@+id/search_item_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="left|center_vertical"
        android:layout_margin="@dimen/normal_margin"
        android:padding="@dimen/small_padding"
        android:scaleType="centerCrop"
        android:src="@drawable/default_event_pic" >
    </com.mysportsshare.mysportscast.view.SquareImageView>

    <TextView
        android:id="@+id/search_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:textSize="@dimen/heading4_text_size"
        android:textColor="@color/black" />

</LinearLayout>