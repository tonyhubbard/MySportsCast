<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg_clr"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/normal_padding"
        android:text="Add photo"
        android:textColor="@color/black"
        android:textSize="@dimen/heading2_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.mysportsshare.mysportscast.view.SquareImageView
                android:id="@+id/event_media_img_pick_gallery_btn"
                android:layout_width="@dimen/large_img"
                android:layout_height="@dimen/large_img"
                android:layout_margin="@dimen/normal_margin"
                android:layout_weight="1"
                android:background="@drawable/media_gallery"
                android:padding="@dimen/normal_padding"
                android:text="@string/pick_gallery_img"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Gallery"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.mysportsshare.mysportscast.view.SquareImageView
                android:id="@+id/event_media_img_pick_camera_btn"
                android:layout_width="@dimen/large_img"
                android:layout_height="@dimen/large_img"
                android:layout_margin="@dimen/normal_margin"
                android:layout_weight="1"
                android:background="@drawable/media_camera"
                android:padding="@dimen/normal_padding"
                android:text="@string/pick_camera_img"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Camera"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>