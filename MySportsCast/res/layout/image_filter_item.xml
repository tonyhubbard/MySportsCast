<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_filter_layout"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/normal_img_container"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:padding="@dimen/normal_padding" >

    <com.mysportsshare.mysportscast.view.SquareImageView
        android:id="@+id/image_filter_icon"
        android:layout_width="@dimen/normal_img"
        android:layout_height="@dimen/normal_img"
        android:duplicateParentState="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/image_filter_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:duplicateParentState="true"
        android:gravity="center_horizontal"
        android:text="NORMAL"
        android:textColor="@android:color/white"
        android:textSize="@dimen/heading4_text_size" />

    <View
        android:id="@+id/image_filter_sel_indicator"
        android:layout_width="fill_parent"
        android:paddingLeft="@dimen/normal_padding"
        android:paddingRight="@dimen/normal_padding"
        android:layout_height="@dimen/select_indication_ht"
        android:background="@color/com_facebook_blue"
        android:duplicateParentState="true" />

</LinearLayout>