<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/noMediaTextLayout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#f5f4f4"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="@dimen/large_margin"
    android:visibility="visible" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="No media exist!...."
        android:textColor="@color/black"
        android:textSize="@dimen/heading1_text_size" />

    <LinearLayout
        android:id="@+id/addMediaTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/normal_padding" >

        <TextView
             android:id="@+id/addMediaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:text="click here to add new media"
            android:duplicateParentState="true"
            android:textColor="@drawable/text_color_of_add_media"
            android:background="@drawable/clickhere_button_background"
            android:padding="@dimen/normal_padding"
            android:textSize="@dimen/heading2_text_size" />

        <!-- <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" /> -->
    </LinearLayout>

</LinearLayout>