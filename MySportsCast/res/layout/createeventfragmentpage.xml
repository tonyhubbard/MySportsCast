<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/create_iv"
        android:layout_width="@dimen/large_img"
        android:layout_height="@dimen/large_img"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/create_event_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_iv"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_padding"
            android:text="Create Event"
            android:textColor="#ffffff"
            android:textSize="@dimen/heading1_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/normal_padding"
            android:text="Create your local sports event so that fans and friends can find it, add highlights, comments or find out whats happening."
            android:textColor="#ffffff"
            android:textSize="@dimen/heading3_text_size" />
    </LinearLayout>

</RelativeLayout>