    <com.mysportsshare.mysportscast.view.SquareImageView
        android:id="@+id/event_pic_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/default_event_pic" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/normal_margin" >

        <ImageView
            android:id="@+id/cheers_tv_icon"
            android:layout_width="@dimen/small_icon"
            android:layout_height="@dimen/small_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:src="@drawable/mega_phone" />

        <TextView
            android:id="@+id/cheers_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_toRightOf="@id/cheers_tv_icon"
            android:text="0 cheers"
            android:textColor="#848484"
            android:textSize="@dimen/heading5_text_size" />

        <TextView
            android:id="@+id/attending_cnt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:text="0 attending"
            android:textColor="#848484"
            android:textSize="@dimen/heading5_text_size" />

        <ImageView
            android:id="@+id/status_tv_icon"
            android:layout_width="@dimen/small_icon"
            android:layout_height="@dimen/small_icon"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_toLeftOf="@id/attending_cnt_tv"
            android:contentDescription="@string/Event_det_date"
            android:scaleType="fitXY"
            android:src="@drawable/likes" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/cast_llyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:id="@+id/border_v"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:background="#A4A4A4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.mysportsshare.mysportscast.view.RoundedImageView
                android:id="@+id/cast_prof_pic"
                android:layout_width="@dimen/user_img"
                android:layout_height="@dimen/user_img"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:src="@drawable/profile_pic_dummy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/follower_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:textColor="#000000"
                    android:textSize="@dimen/heading5_text_size" />

                <TextView
                    android:id="@+id/comment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:textColor="#848484"
                    android:textSize="@dimen/heading5_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>